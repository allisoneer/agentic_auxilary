{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "write": "ask",
    "external_directory": "ask"
  },
  "tools": {
    "*": false,
    "edit": true,
    "write": true,
    "read": true,
    "todowrite": true,
    "todoread": true,
    "tools_web_*": false,
    "tools_cli_*": true,
    "tools_ask_*": true,
    "tools_thoughts_*": true,
    "tools_gh_*": true
  },
  "agent": {
    "Normal": {
      "prompt": "{file:./.opencode/sysprompt.md}",
      "mode": "primary"
    },
    "Bash": {
      "prompt": "{file:./.opencode/sysprompt.md}",
      "mode": "primary",
      "permission": {
        "bash": {
          "*": "ask",
          "cd*": "allow",
          "ls*": "allow",
          "find*": "allow",
          "cat*": "allow",
          "grep*": "allow",
          "head*": "allow",
          "tail*": "allow",
          "echo*": "allow",
          "wc*": "allow",
          "tree*": "allow",
          "jq*": "allow",
          "gh*": "allow",
          "pwd": "allow",
          "which*": "allow",
          "cargo check*": "allow",
          "cargo test*": "allow",
          "cargo run*": "allow",
          "cargo clippy*": "allow",
          "cargo fmt*": "allow",
          "cargo tree": "allow",
          "cargo metadata": "allow",
          "cargo --version": "allow",
          "cargo build*": "allow",
          "cargo expand*": "allow",
          "rustc --version": "allow",
          "rustup show": "allow",
          "make*": "allow",
          "just*": "allow",
          "git status*": "allow",
          "git add*": "allow",
          "git log*": "allow",
          "git diff*": "allow",
          "git branch*": "allow",
          "git remote -v": "allow",
          "git show*": "allow",
          "git blame*": "allow",
          "git grep*": "allow",
          "aws s3 ls*": "allow",
          "aws ec2 describe-*": "allow",
          "aws lambda list-*": "allow",
          "aws cloudformation describe-*": "allow",
          "aws --version": "allow",
          "aws configure list*": "allow",
          "tofu validate*": "allow",
          "tofu plan*": "allow",
          "tofu fmt*": "allow",
          "tfsec*": "allow"
        }
      }
    },
    "Playwright": {
      "prompt": "{file:./.opencode/sysprompt.md}",
      "mode": "primary",
      "permission": {
        "playwright_*": "allow"
      }
    },
    "Linear": {
      "permission": {
        "tools_linear_*": "allow"
      }
    },
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    "general": {
      "disable": true
    },
    "explore": {
      "disable": true
    }
  },
  "mcp": {
    "tools": {
      "type": "local",
      "command": [
        "agentic-mcp"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  },
  "provider": {
    "anthropic": {
      "models": {
        "claude-opus-4-5": {
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 36000
            }
          }
        }
      }
    }
  },
  "experimental": {
    "mcp_timeout": 3600000
  }
}
